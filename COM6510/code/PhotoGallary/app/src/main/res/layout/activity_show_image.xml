<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.michael.Com6510.photogallary.activity.ShowImage">




    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="561dp"
        tools:layout_editor_absoluteY="4dp">
    </android.support.v4.view.ViewPager>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#bbbbbb">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:alpha="25">
        <ImageButton
            android:id="@+id/back_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="5"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/back_action"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/cancel_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="105dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/average_font"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/save_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="60dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="@dimen/average_font"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/edit_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="@dimen/average_font"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/details_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="@dimen/average_font" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/details_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/black"
        android:alpha="25">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/average_font" />

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Title"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font" />

        <EditText
            android:id="@+id/title_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Description"
            android:textColor="@color/white"
            android:textSize="@dimen/average_font" />

        <TextView
            android:id="@+id/description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Title"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font" />

        <EditText
            android:id="@+id/description_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Description"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Date"
            android:textColor="@color/white"
            android:textSize="@dimen/average_font" />

        <TextView
            android:id="@+id/date_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display DATE"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Properties"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:textSize="@dimen/average_font" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:alpha="25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Orientation: "
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:id="@+id/orientation_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Display orientation"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_font" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/black"
                    android:alpha="25">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Size: "
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:id="@+id/size_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Display Size"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_font" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/black"
                    android:alpha="25"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resolution: "
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_font" />
                    <TextView
                        android:id="@+id/resolution_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Display Resolution"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_font"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Location"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:textSize="@dimen/average_font" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map1"
                class="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="10"
                android:scrollbars="vertical" />
            <ImageButton
                android:id="@+id/delete_location_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_indeterminate_check_box_white_24dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_upload_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="normal"
        android:src="@drawable/ic_file_upload_white_24dp" />
</android.support.design.widget.CoordinatorLayout>
